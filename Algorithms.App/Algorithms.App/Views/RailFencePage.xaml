<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Algorithms.App.Views.RailFencePage">
    
    <StackLayout Padding="30,10,30,10">
        <Label FontSize="Title" Text="Rail fence algorithm" />
        <Entry Placeholder="Enter text" Text="{Binding TextToEncrypt, Mode=TwoWay}"></Entry>
        <Button Text="Encrypt" Command="{Binding EncryptCommand}"/>
        <Label Text="{Binding EncryptResult}" />
    </StackLayout>
</ContentPage>